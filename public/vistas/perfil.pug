extends layout
block links
    ul.navbar-nav.mr-auto
        li.nav-item
            a.nav-link.waves-effect(href="/dashboard") 
                i.fa.fa-home.ml-1
                span Inicio
        li.nav-item.active
            a.nav-link.waves-effect(href="/perfil")
                i.fa.fa-user.ml-1
                span Perfil
block contenido
    if (message && message.length > 0) 
        div.alert.alert-success.alert-dismissible.fade.show#contenedor-mensaje(style = "display:none;" role="alert") #{message}, #{nombreUsuario}!
            button.close(type="button" data-dismiss="alert" aria-label="Close")
                span(aria-hidden="true") &times;
    div.card.mb-4.wow.fadeIn
        div.card-body.d-sm-flex.justify-content-between
            h3.mb-2.mb-sm-0.pt-1 Perfil de usuario
    div.row.wow.fadeIn
        div.col-md-6.mb-4
            div.card
                div.card-body
                    h4(style="text-align:center;") #{nombreUsuario}
                    hr
                    ul.list-group-flush(style="padding-left: 5px;")
                        li.list-group-item
                            p.mb-0
                            i.fa.fa-user.fa-2x.mr-2.blue.p-3.white-text.rounded 
                            span.cb-perfil Nickname:
                            span.el-perfil Saul

                        li.list-group-item
                            p.mb-0
                            i.fa.fa-university.fa-2x.mr-2.p-3.white-text.rounded.red
                            span.cb-perfil Universidad:
                            span.el-perfil(style="margin-left: -2.3rem;") UNAH
                        li.list-group-item
                            p.mb-0
                            i.fa.fa-database.fa-2x.mr-2.p-3.white-text.rounded(style="background-color: #144a5d !important;")
                            span.cb-perfil Plan:
                            span.el-perfil(style="margin-left: 2rem;") Gratis
                            
                            

                            


